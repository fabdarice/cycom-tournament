<%= form_for @user do |f| %>
  <%= render "shared/error_messages", :target => @user %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.text_field :nickname %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.text_field :phone %>
  <%= f.text_field :address %>
  <%= f.text_field :city %>
  <%= f.text_field :zip_code %>
  <%= f.text_field :country %>
  <%= f.select :sex, [['Homme', 'M'], ['Femme', 'F']], :class => 'long' %>
  <%= f.date_select :birthdate,
      :start_year => 100.years.ago.year, :end_year => Time.now.year,
      :default => 20.years.ago, :order => [:day, :month, :year] %>
<% if false %>
  <% if admin? -%>
	<%= f.check_box :admin %>
  <% end -%>
<% end %>
  <%= f.submit @user.new_record? ? t("validate.new") : t("validate.edit") %>
<% end -%>